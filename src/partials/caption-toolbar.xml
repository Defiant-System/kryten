<CaptionToolBar has="display">
	<Group class="tools-left">
		<Tool symbol="icon-pause" click="toggle-fps" state="disabled"/>
		<Options>
			<Tool symbol="icon-play" click="goto-start" state="disabled"/>
			<Tool symbol="icon-previous" click="goto-prev-step" state="disabled"/>
			<Tool symbol="icon-next" click="goto-next-step" state="disabled"/>
		</Options>
	</Group>
	<Group class="display tool-disabled_">
		<Field class="blank-display">
			<!-- song title -->
			<div class="song-name">Karaqu</div>
		</Field>
		<Canvas/>
	</Group>
	<Group class="tools-right">
		<Tool symbol="icon-mic-off" click="toggle-microphone"/>
	</Group>
	<Group class="tools-last">
		<Tool symbol="icon-gear" menu="app-ui-layout"/>
	</Group>
</CaptionToolBar>