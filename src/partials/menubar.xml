<MenuBar>
	<Menu name="Kryten">
		<Menu name="About Kryten" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Settings&#8230;" for="app-ui-layout">
			<Menu name="Sample files&#8230;">
				<Menu name="Close Current" click="close-file"/>
				<Menu type="divider"/>
				<Menu name="Lack" click="load-sample" arg="lack.xml"/>
				<Menu name="Pyramid" click="load-sample" arg="pyramid.xml"/>
				<Menu name="Monkey" click="load-sample" arg="monkey.xml"/>
				<Menu name="Torus Knot" click="load-sample" arg="torus-knot.xml"/>
				<Menu name="Basic" click="load-sample" arg="basic.xml"/>
			</Menu>
			<Menu name="Commands&#8230;">
				<Menu name="Start" click="goto-start"/>
				<Menu name="Next Step" click="goto-next-step"/>
				<Menu name="Previous Step" click="goto-prev-step" disabled="1"/>
			</Menu>
			<Menu type="divider"/>
			<Menu name="IKEA" click="set-ui-theme" arg="ikea" check-group="ui-theme"/>
			<Menu name="Blueprint" click="set-ui-theme" arg="blueprint" check-group="ui-theme"/>
			<Menu name="Antique" click="set-ui-theme" arg="antique" check-group="ui-theme"/>
			<Menu type="divider"/>
			<Menu type="caption" name="Lines:"/>
			<Menu type="slider" min="1" max="179" value="20" change="change-edges-threshold"/>
			<Menu type="divider"/>
			<Menu name="Play/Pause" click="toggle-play-pause"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Quit Kryten" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>