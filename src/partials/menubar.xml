<MenuBar>
	<Menu name="Kryten">
		<Menu name="About Kryten" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Sample files&#8230;">
			<Menu name="Torus" click="load-sample" arg="torus.xml"/>
			<Menu name="Torus Knot" click="load-sample" arg="torus-knot.xml"/>
		</Menu>
		<Menu name="Theme&#8230;" for="app-ui-layout">
			<Menu name="IKEA" click="set-ui-theme" arg="ikea" check-group="ui-theme" is-checked="1"/>
			<Menu name="Blueprint" click="set-ui-theme" arg="blueprint" check-group="ui-theme"/>
			<Menu name="Antique" click="set-ui-theme" arg="antique" check-group="ui-theme"/>
			<Menu type="divider"/>
			<Menu name="Play/Pause" click="toggle-play-pause"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Quit Kryten" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>